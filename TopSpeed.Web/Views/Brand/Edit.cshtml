@model Brand

<!-- Its an create page of Brand -->

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-uppercase text-center ">Edit Brand</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 border-1 border">
            <form method="post" enctype="multipart/form-data">
                <!-- Its Based on store the data -->
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label"></label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Established" class="form-label"></label>
                    <input asp-for="@Model.Established" class="form-control" />
                    <span asp-validation-for="@Model.Established" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.BrandLogo" class="form-label"></label>
                    <input asp-for="@Model.BrandLogo" type="file" name="files" id="uploadBox" class="form-control" />
                </div>
                <div class="mb-3">
                    <a asp-controller="Brand" asp-action="Index" class="btn btn-danger">Back</a>
                    <button type="submit" class="btn btn-warning">Edit</button>
                </div>

            </form>
        </div>
        <div class="col-md-4">
            @if(Model.BrandLogo != null)
            {
                <img src="@Model.BrandLogo" width="100">
            }
            else
            {
               
            }
        </div>
    </div>
</div>
@section scripts{
    <partial name="_ValidationScriptsPartial">
    }
